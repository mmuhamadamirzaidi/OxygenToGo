<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="80dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_normal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_normal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_oxygen_tank"
                        android:adjustViewBounds="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_normal"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:text="Kira Jumlah Silinder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_normal"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_normal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_gauge"
                        android:adjustViewBounds="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_normal"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:text="Jangka Masa Silinder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_normal"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_normal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_notepad"
                        android:adjustViewBounds="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_normal"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:text="Rujukan @ Nota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:visibility="gone"
                android:id="@+id/button_1"
                android:text="Jumlah Silinder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:visibility="gone"
                android:id="@+id/button_2"
                android:text="Jangka masa silinder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:visibility="gone"
                android:id="@+id/button_3"
                android:text="Rujukan @ Nota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/bottom_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</LinearLayout>
